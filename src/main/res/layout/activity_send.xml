<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grass_light"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/e_infos"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="分享您的那点新鲜事儿..."
            android:lines="8"></EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grass_light" />

        <Spinner
            android:id="@+id/select_spinner"
            style="?android:attr/dropDownSpinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spingarr"
            android:padding="5dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/send_images"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_select" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grass_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="位置:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/site_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="河南省"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>